                <p>Curva Hagz</p>
            </div>
            <div class="social-media">
                <a href=""><i class="fa-brands fa-facebook-f"></i></a>
                <a href=""><i class="fa-brands fa-instagram"></i></a>
                <a href=""><i class="fa-brands fa-linkedin-in"></i></a>
            </div>
        </div>

        <div class="landing-page">
            <div class="container">
                <div class="nav">
                    <div class="logo">
                        <i class="fa-solid fa-futbol"></i>
                        <p>Curva <span>Hagz</span></p>
                    </div>
                    <div class="links">
                        <ul id="menu">
                            <a asp-controller="Home" asp-action="Index">
                            <li>home</li></a>
                            <a asp-controller="Home" asp-action="About">
                            <li>about us</li></a>
                            <a asp-controller="Home" asp-action="Contact">
                            <li>contact</li></a>
                            @if (ViewBag.IsOwner == 0)
                            {
                                <a href="../Teams/TeamInfo">
                                <li>Teams</li></a>
                            }
                            @if (ViewBag.IsOwner == 0)
                            {
                                <a href="../Playground/GetAll">
                                <li>Playgrounds</li></a>
                            }
                        </ul>
                        <i class="fa-solid fa-bars" onclick="openmenu()"></i>
                        <a asp-controller="Account" asp-action="PlayerProfile" class="profile-button">profile</a>
                    </div>
                </div>
                <div class="content reveal reveal-bottom">
                    <h1>Profile</h1>
                </div>
            </div>
        </div>

        <div class="profile">
            <div class="container">
                <div class="user">
                    <div class="img reveal reveal-left">
                        <div class="img reveal reveal-left">
                            <img src="@Url.Content(Model.ProfileImagePath ?? "~/Images/userphoto.png")"
                                 alt="Profile Photo"
                                 width="120"
                                 height="120"
                                 style="border-radius: 50%; object-fit: cover;" />

                            <form asp-action="UploadProfilePhoto" asp-controller="Account" method="post" enctype="multipart/form-data">
                                <label for="ProfileImage">Upload</label>
                                <input id="ProfileImage" type="file" name="ProfileImage" accept="image/*" required />
                                <button type="submit">Change</button>
                            </form>
                        </div>

                        @*                         <div class="edit">
        <button class="change" id="change" onclick="fchange()">
            change
        </button>
        <button class="delete" id="delete-tab" onclick="fdelete()">
            delete
        </button>
    </div> *@
                    </div>
                    <div class="text reveal reveal-right">
                        <div class="user_name">
                            <div class="first_name">@Model.FName</div>
                            <div class="last_name">@Model.LName</div>
                        </div>
                        <div class="log_out">
                            <form asp-action="LogOut" method="POST">
                                <button name="out">
                                    log out <i class="fa-solid fa-right-from-bracket"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="selectors">
                    <ul class="filter">
                        <li data-type=".table" class="active type table">settings</li>
                        <li data-type=".dashboard" class="type dash">dashboard</li>
                         
                        <!-- <li data-type=".attendance" class="type attend">attendance</li> -->
                    </ul>
                </div>
                <div class="table box">
                    <div class="section-heading reveal reveal-bottom">
                        <h2>settings</h2>
                    </div>
                    <table>
                        <tbody>
                            <tr class="reveal">
                                <td>email</td>
                                <td>@Model.Email</td>
                                <td>
                                    <button data-tab="email-tab">edit</button>
                                </td>
                            </tr>
                            <tr class="reveal">
                                <td>fullname</td>
                                <td>@Model.FullName</td>
                                <td>
                                    <button data-tab="username-tab">edit</button>
                                </td>
                            </tr>
                            <tr class="reveal">
                                <td>phone number</td>
                                <td>@Model.Phone</td>
                                <td>
                                    <button data-tab="phone-tab">edit</button>
                                </td>
                            </tr>
                            <tr class="reveal">
                                <td>password</td>
                                <td>***********</td>
                                <td>
                                    <button data-tab="password-tab">edit</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="delete_acc">
                        <button id="delete_acc" onclick="deleteacc()">
                            delete account
                        </button>
                    </div>
                </div>
                <div class="dashboard box" style="display: none">
                    <div class="section-heading ">
                        <h2>dashboard</h2>
                    </div>
                    @{
                        if (ViewBag.IsOwner == 0)
                        {
                            <table>
                                <thead>
                                <td>#</td>
                                <td>playground Name</td>
                                <td>date</td>
                                <td>Duration</td>
                                <td>Total price</td>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var Booking in Model.PlayerBookings)
                                    {
                                        <tr class="reveal">
                                            <td>@i</td>
                                            <td>@Booking.Playground.PlaygroundName</td>
                                            <td>@Booking.StartTime</td>
                                            <td>
                                                @((Booking.EndTime.Hour >= Booking.StartTime.Hour)
                                                ? (Booking.EndTime.Hour - Booking.StartTime.Hour)
                                                : (Booking.EndTime.Hour - Booking.StartTime.Hour + 24))
                                            </td>
                                            <td>@Booking.TotalPrice</td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            int i = 1;
                            <table>
                                <thead>
                                <td>#</td>
                                <td>playground name</td>
                                <td>playground city</td>
                                <td> </td>
                                <td> </td>
                                </thead>
                                @foreach (var model in Model.OwnerPlaygrounds)
                                {
                                    <tbody>
                                        <tr class="reveal">
                                            <td>@i</td>
                                            <td>@(model.PlaygroundName)</td>
                                            <td>@(model.City)</td>
                                            <td>
                                                <div class="delete_acc">
                                                    <a href="../Playground/PlayGroundDetails?PlaygroundId=@(model.PlaygroundId)" id="delete_acc">
                                                        Details
                                                    </a>
                                            </td>
                                            <td>
                                                <div class="delete_acc">
                                                    <a asp-controller="Playground" asp-action="Update" asp-route-PlaygroundId="@(model.PlaygroundId)" id="delete_acc">
                                                        Update
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                    i++;
                                }
                            </table>
                            <div class="delete_acc">
                                <a href="../Playground/Add" id="delete_acc">
                                    Add Playground
                                </a>
                            </div>
                        }
                    }

                    <div class="attendance box" id="progresses" style="display: none">
                        <div class="section-heading">
                            <h2>attendance</h2>
                        </div>
                        <div class="progresses">
                            <div class="progress reveal reveal-left">
                                <div class="circle-progress">
                                    <span class="progress-value" data-prog="30">0%</span>
                                </div>
                                <p>program</p>
                            </div>
                            <div class="progress">
                                <div class="circle-progress">
                                    <span class="progress-value" data-prog="70">0%</span>
                                </div>
                                <p>class</p>
                            </div>
                            <div class="progress reveal reveal-right">
                                <div class="circle-progress">
                                    <span class="progress-value" data-prog="100">0%</span>
                                </div>
                                <p>attendance</p>
                            </div>
                        </div>
                        <table>
                            <thead>
                            <td>#</td>
                            <td>program / class</td>
                            <td>session number</td>
                            <td>date</td>
                            </thead>
                            <tbody>
                                <tr class="reveal">
                                    <td>1</td>
                                    <td>yoga</td>
                                    <td>3</td>
                                    <td>10/8/2004</td>
                                </tr>
                                <tr class="reveal">
                                    <td>1</td>
                                    <td>yoga</td>
                                    <td>3</td>
                                    <td>10/8/2004</td>
                                </tr>
                                <tr class="reveal">
                                    <td>1</td>
                                    <td>yoga</td>
                                    <td>3</td>
                                    <td>10/8/2004</td>
                                </tr>
                                <tr class="reveal">
                                    <td>1</td>
                                    <td>yoga</td>
                                    <td>3</td>
                                    <td>10/8/2004</td>
                                </tr>
                                <tr class="reveal">
                                    <td>1</td>
                                    <td>yoga</td>
                                    <td>3</td>
                                    <td>10/8/2004</td>
                                </tr>
                                <tr class="reveal">
                                    <td>1</td>
                                    <td>yoga</td>
                                    <td>3</td>
                                    <td>10/8/2004</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="footer">
                <div class="container">
                    <div class="about reveal reveal-left">
                        <div class="logo">
                            <i class="fa-solid fa-futbol"></i>
                            <p>Curva <span>Hagz</span></p>
                        </div>
                        <div class="info">
                            <p>
                                Welcome to Triple A, where your fitness journey begins! At
                                Triple A. Join us today and unleash your full potential at
                                Triple A!
                            </p>
                            <div class="location">
                                <i class="fa-solid fa-location-dot"></i>
                                <p>FCI-KFSU-KFS-EGY</p>
                            </div>
                            <div class="phone">
                                <i class="fa-solid fa-phone"></i>
                                <p>(+20) 127 489 2442</p>
                            </div>
                        </div>
                    </div>
                    <div class="quick-links reveal reveal-left">
                        <h3>quick links</h3>
                        <div class="link">
                            <i class="fa-solid fa-angle-right"></i>
                            <a href="index.html">home</a>
                        </div>
                        <div class="link">
                            <i class="fa-solid fa-angle-right"></i>
                            <a href="about.html">about us</a>
                        </div>
                        <div class="link">
                            <i class="fa-solid fa-angle-right"></i>
