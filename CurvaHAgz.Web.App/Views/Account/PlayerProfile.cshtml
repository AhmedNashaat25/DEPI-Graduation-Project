                    <div class="pass-feild">
                        <input type="password"
                               name="password-old"
                               id="password-old"
                               placeholder="Enter the old password" />
                        <i class="fa-solid fa-eye-slash eye" id="eye-0"></i>
                    </div>
                    <label for="password-new">new password</label>
                    <div class="pass-feild">
                        <input type="password"
                               name="new-password"
                               id="password-new"
                               placeholder="Enter the new password" />
                        <i class="fa-solid fa-eye-slash eye" id="eye-1"></i>
                    </div>
                    <label for="password-confirm">confirm new password</label>
                    <div class="pass-feild">
                        <input type="password"
                               name="confirm-new-password"
                               id="password-confirm"
                               placeholder="Confirm the new password" />
                        <i class="fa-solid fa-eye-slash eye" id="eye-2"></i>
                    </div>
                    <div class="btns">
                        <div class="button" data-close="password-tab">cancel</div>
                        <input type="submit" name="sub-password" value="edit" />
                    </div>
                </form>
            </div>
        </div>

        <div class="change-delete">
